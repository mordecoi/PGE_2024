<Window x:Class="CalculadoraPropinas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculadoraPropinas"
        mc:Ignorable="d"
        Title="Propineitor" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Label Content="Monto de la cuenta:" />
        <TextBox x:Name="txtBillAmount" Width="650"/>
        <Slider x:Name="sliderPor" Width="650" ValueChanged="sliderPor_ValueChanged" Maximum="100" SmallChange="1"/>
        <Label x:Name="labpor" Content="" Width="600"/>
        <Button x:Name="btnCalc" Content="Calcular" Width="100" Height="50" Click="btnCalc_Click"/>
        <Label x:Name="labPropina" Content="La propina es: " Width="200"/>
        <Label x:Name="labTotal" Width="200"/>
    </StackPanel>
</Window>
